{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "module": "commonjs",
    "target": "es2022",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": ["src/Core/**/*.ts", "src/Operators/**/*.ts", "./index.ts"],
  "exclude": ["node_modules", "src"]
}
